@using Sidekick.Common.Settings

<FormCheckbox Value="@DefaultBaseTypeOption"
              ValueChanged="@DefaultBaseTypeOptionChanged">
    @Resources.Default_BaseTypeOption
</FormCheckbox>

@inject SettingsResources Resources
@inject ISettingsService SettingsService

@code {

    private bool DefaultBaseTypeOption { get; set; }

    protected override async Task OnInitializedAsync()
    {
        DefaultBaseTypeOption = await SettingsService.GetBool(SettingKeys.DefaultBaseTypeOption);
        await base.OnInitializedAsync();
    }

    private async Task DefaultBaseTypeOptionChanged(bool value)
    {
        DefaultBaseTypeOption = value;
        await SettingsService.Set(SettingKeys.DefaultBaseTypeOption, value);
    }

}
